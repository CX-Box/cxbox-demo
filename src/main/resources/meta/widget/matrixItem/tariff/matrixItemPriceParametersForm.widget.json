      "type": "input"
    },
    {
      "label": "Схема начисления",
      "key": "paymentScheme",
      "type": "input"
    },
    {
      "label": "Льготный период, мес.",
      "key": "gracePeriodMonth",
      "type": "number", "nullable": true
    },
    {
      "label": "Максимальный срок отсрочки",
      "key": "maxDelayTerm",
      "type": "number", "nullable": true
